# [[file:../main.org::*PGGB minia_polished][PGGB minia_polished:1]]
rule pggb_minia:
    input:
        corrected_reads=minia_prefix+'.contigs.polished.fa'
    output:
        directory("outputs/pggb/minia"+pggb_prefix)
    params:
        **config['params']['pggb']
    conda:
        'envs/pggb_env.yaml'
    threads:
        get_cores_perc(0.5)
    shell:
        "pggb -i {input.corrected_reads} -p {params.map-pct-id} -n {params.n-mappings} -s {params.segment-length} -t {threads} -o {output} -m"
# PGGB minia_polished:1 ends here
